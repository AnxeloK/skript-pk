# Test command for Skript-PK cooldown & temp block syntax
command /pktempdebug:
    permission: op
    trigger:
        set {_ability} to "WaterManipulation"
        send "&7Cooldowns before: %{pk active cooldowns of player}%"
        set {_remaining} to pk cooldown {_ability} of player
        send "&7Remaining before: %{_remaining}%"
        set pk cooldown {_ability} for player to 5 seconds
        set {_after} to pk cooldown {_ability} of player
        send "&aRemaining after set: %{_after}%"
        reset pk cooldown {_ability} for player
        reset all pk cooldowns for player
        create pk temporary block at location of player with stone for 2 seconds
        set {_blocks::*} to pk bendable blocks of earth for player within 20
        send "&bBendable blocks: %{_blocks::*}%"
